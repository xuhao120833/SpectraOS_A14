<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 获取焦点状态 -->
    <item android:state_focused="true">

        <shape>
            <stroke android:width="@dimen/x_3" android:color="#FFFFFF" />
            <solid android:color="#0c84ff" /> <!-- 黑色透明度50% -->
            <corners android:radius="@dimen/y_20" /> <!-- 圆角半径 -->
        </shape>

    </item>

    <!-- 正常状态 -->
    <item>
        <shape>
            <solid android:color="#80000000" /> <!-- 黑色透明度50% -->
            <corners android:radius="@dimen/y_20" /> <!-- 圆角半径 -->
        </shape>
    </item>
</selector>

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape
            android:shape="oval">
            <solid android:color="@color/color_focus"/>
            <size android:width="@dimen/x_160"
                android:height="@dimen/y_160"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/color_default"/>
            <size android:width="@dimen/x_160"
                android:height="@dimen/y_160"/>
        </shape>
    </item>
</selector>
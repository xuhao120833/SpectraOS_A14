<?xml version="1.0" encoding="utf-8"?>
<com.htc.spectraos.widget.RLRelativelayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x_180"
    android:layout_height="@dimen/y_160"
    android:minWidth="@dimen/x_180"
    android:minHeight="@dimen/y_160"
    style="@style/focusStyle"
    android:id="@+id/rl_item"
    android:background="@drawable/app_item_bg"
    >

    <ImageView
        android:layout_width="@dimen/x_100"
        android:layout_height="@dimen/y_100"
        android:id="@+id/app_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y_10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/app_name"
        android:layout_below="@id/app_icon"
        android:layout_marginTop="@dimen/y_5"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/x_28"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:paddingStart="@dimen/x_10"
        android:paddingEnd="@dimen/x_10"
        />

</com.htc.spectraos.widget.RLRelativelayout>
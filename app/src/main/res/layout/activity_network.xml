<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_other"
    tools:context=".activity.NetworkActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x_100"
        android:layout_marginTop="@dimen/y_40"
        android:text="@string/network_setting"
        android:textColor="@color/white"
        android:textSize="@dimen/x_40" />

    <RelativeLayout
        android:id="@+id/rl_wireless_network"
        style="@style/focusStyle"
        android:layout_width="@dimen/x_1032"
        android:layout_height="@dimen/y_80"
        android:layout_below="@id/title"
        android:layout_marginStart="@dimen/x_100"
        android:layout_marginTop="@dimen/y_30"
        android:background="@drawable/main_settings_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x_50"
            android:duplicateParentState="true"
            android:text="@string/wireless_network"
            android:textColor="@color/tv_color"
            android:textSize="@dimen/x_27" />

        <View
            android:layout_width="@dimen/x_53"
            android:layout_height="@dimen/y_53"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x_50"
            android:background="@drawable/arrow_right_bg"
            android:duplicateParentState="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_hotspot"
        style="@style/focusStyle"
        android:layout_width="@dimen/x_1032"
        android:layout_height="@dimen/y_80"
        android:layout_below="@id/rl_wireless_network"
        android:layout_marginStart="@dimen/x_100"
        android:layout_marginTop="@dimen/y_19"
        android:background="@drawable/main_settings_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x_50"
            android:duplicateParentState="true"
            android:text="@string/hotspot_settings"
            android:textColor="@color/tv_color"
            android:textSize="@dimen/x_27" />

        <View
            android:id="@+id/digital_zoom_right"
            android:layout_width="@dimen/x_53"
            android:layout_height="@dimen/y_53"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x_50"
            android:background="@drawable/arrow_right_bg"
            android:duplicateParentState="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_wired_network"
        style="@style/focusStyle"
        android:layout_width="@dimen/x_1032"
        android:layout_height="@dimen/y_80"
        android:layout_below="@id/rl_hotspot"
        android:layout_marginStart="@dimen/x_100"
        android:layout_marginTop="@dimen/y_19"
        android:background="@drawable/main_settings_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/x_50"
            android:duplicateParentState="true"
            android:text="@string/wired_network"
            android:textColor="@color/tv_color"
            android:textSize="@dimen/x_27" />

        <View
            android:layout_width="@dimen/x_53"
            android:layout_height="@dimen/y_53"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x_50"
            android:background="@drawable/arrow_right_bg"
            android:duplicateParentState="true" />
    </RelativeLayout>


</RelativeLayout>
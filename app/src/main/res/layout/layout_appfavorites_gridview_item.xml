<?xml version="1.0" encoding="utf-8"?>
<com.htc.spectraos.widget.RLRelativelayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    style="@style/focusStyle"
    android:layout_width="@dimen/x_210"
    android:layout_height="@dimen/y_170"
    android:background="@drawable/app_item_bg"
    android:minWidth="@dimen/x_210"
    android:minHeight="@dimen/y_170">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/x_100"
        android:layout_height="@dimen/y_100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x_10" />

    <ImageView
        android:id="@+id/status"
        android:layout_width="@dimen/x_60"
        android:layout_height="@dimen/y_60"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_addpp_select"
        android:visibility="gone" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_icon"
        android:layout_marginLeft="@dimen/x_10"
        android:layout_marginTop="@dimen/x_10"
        android:layout_marginRight="@dimen/x_10"
        android:ellipsize="marquee"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/x_24" />
</com.htc.spectraos.widget.RLRelativelayout>
